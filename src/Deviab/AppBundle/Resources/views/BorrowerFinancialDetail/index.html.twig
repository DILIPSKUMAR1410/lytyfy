{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BorrowerFinancialDetail list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amountneeded</th>
                <th>Amountraised</th>
                <th>Tenure</th>
                <th>Interest</th>
                <th>Emi</th>
                <th>Createdat</th>
                <th>Modifiedat</th>
                <th>Modifiedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('borrowerfinancialdetail_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.amountNeeded }}</td>
                <td>{{ entity.amountRaised }}</td>
                <td>{{ entity.tenure }}</td>
                <td>{{ entity.interest }}</td>
                <td>{{ entity.emi }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedAt %}{{ entity.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.modifiedBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('borrowerfinancialdetail_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('borrowerfinancialdetail_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('borrowerfinancialdetail_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
