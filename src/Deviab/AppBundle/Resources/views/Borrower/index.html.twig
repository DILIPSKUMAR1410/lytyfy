{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Borrower list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>State</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Locality</th>
                <th>City</th>
                <th>Borrowerimg</th>
                <th>Borrowerdob</th>
                <th>Createdat</th>
                <th>Modifiedat</th>
                <th>Modifiedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('borrower_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.state }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.locality }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.borrowerImg }}</td>
                <td>{% if entity.borrowerDob %}{{ entity.borrowerDob|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedAt %}{{ entity.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.modifiedBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('borrower_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('borrower_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('borrower_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
