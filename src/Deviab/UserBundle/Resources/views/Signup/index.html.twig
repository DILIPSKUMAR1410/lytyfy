	$(".link").css({'height':((h-200)/3)+'px','padding-top':((h-200)/6)+'px'});
	// Scroll the whole document 
	$('nav').localScroll({
	   target:'body'
	});		
	// Scroll the content inside the #scroll-container div
	$('#about-links').localScroll({
	   target:'#small-box-container'
	});	
	$('#solutions-links').localScroll({
	   target:'#solutions-container'
	});		
	$('#careers-links').localScroll({
	   target:'#careers-container'
	});	
	$('.ae').trigger('click');
	$('.ofg').trigger('click');
	$('#cr').trigger('click');

	$("body").keydown(function(ev){
        if(ev.which == 40 ) {
        	if(scrollCount == 0) {
        		scrollCount++;
           		$("html, body").animate({ scrollTop: h+"px" });
           	} else if(scrollCount == 1) {
           		$('.tm').trigger('click');
           		$("html, body").animate({ scrollTop: h+"px" });
           		scrollCount++;
           	} else if (scrollCount == 2) {
           		scrollCount++;
           		$('.am').trigger('click');
           		$("html, body").animate({ scrollTop: h+"px" });
           	} else if (scrollCount == 3) {
           		scrollCount++;
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} else if (scrollCount == 4) {
           		scrollCount++
           		$('.cs').trigger('click');
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} else if (scrollCount == 5) {
           		scrollCount++;
           		$('.csn').trigger('click');
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} 	else if (scrollCount == 6) {
           		scrollCount++;
           		$("html, body").animate({ scrollTop: h*3+"px" });
           	}
           	else if (scrollCount == 7) {
           		scrollCount++;
           		$('.vol').trigger('click');
           		$("html, body").animate({ scrollTop: h*3+"px" });
           	} 
           	else if (scrollCount == 8) {
           		scrollCount++;
           		$("html, body").animate({ scrollTop: h*4+"px" });
           	}           	
        }
        if(ev.which == 38 ) {
        	if(scrollCount == 9) {
        		scrollCount=7;
        		$('#careers').trigger('click');
           		$("html, body").animate({ scrollTop: h*3+"px" });
           	} else if(scrollCount == 8) {
           		scrollCount--;
           		$('#careers').trigger('click');
           		$("html, body").animate({ scrollTop: h*3+"px" });
           	} else if(scrollCount == 7) {
           		scrollCount=4;
           		$('.ofg').trigger('click');
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} else if(scrollCount == 5) {
           		scrollCount--;
           		$('.ofg').trigger('click');
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} else if(scrollCount == 6) {
           		scrollCount=4;
           		$('.ofg').trigger('click');
           		$("html, body").animate({ scrollTop: h*2+"px" });
           	} else if (scrollCount == 4) {
           		scrollCount=1;
           		$('.ae').trigger('click');
           		$("html, body").animate({ scrollTop: h+"px" });
           	} else if (scrollCount == 2) {
           		scrollCount--;
           		$('.ae').trigger('click');
           		$("html, body").animate({ scrollTop: h+"px" });
           	} else if (scrollCount == 3) {
           		scrollCount--;
           		$('.tm').trigger('click');
           		$("html, body").animate({ scrollTop: h+"px" });
           	} else if (scrollCount == 1) {
           		scrollCount=0;
           		$("html, body").animate({ scrollTop: "0px" });
           	} 
        }
	});			
});

